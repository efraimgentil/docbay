<h1>Listing my projects and projects that i'm a collaborator</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, show_my_project_path(project.id) %></td>
        <td><%= project.description %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

