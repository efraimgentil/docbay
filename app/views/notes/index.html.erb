<h1>Listing notes</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.body %></td>
        <td><%= link_to 'Show', note_path(:project_id => note.project_id , :id => note.id ) %></td>
        <td><%= link_to 'Edit', edit_note_path(:project_id => note.project_id , :id => note.id) %></td>
        <td><%= link_to 'Destroy', note_path(:project_id => note.project_id , :id => note.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
